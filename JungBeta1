*/
        
        
       	graph.addVertex("server");
//proto of required string
//      graph.addEdge(edgeFactory.create(), "Edge "+id, "A0", "B0")
        graph.addVertex("A0");
        graph.addVertex("A1");
        graph.addVertex("A2");
        graph.addVertex("A3");
//        graph.addVertex("A4");
        
       	graph.addEdge(edgeFactory.create(), "server", "A0");
